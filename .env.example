# DiaCare Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===================================
# API Configuration
# ===================================
API_BASE_URL=https://api.diacare.com
API_VERSION=v1
API_TIMEOUT=30

# ===================================
# Firebase Configuration
# ===================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_STORAGE_BUCKET=your_storage_bucket

# ===================================
# Agora Video Call Configuration
# ===================================
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_certificate_here

# ===================================
# Payment Gateway (Razorpay)
# ===================================
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# ===================================
# Google Services
# ===================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_WEB_CLIENT_ID=your_google_web_client_id

# ===================================
# Feature Flags
# ===================================
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true

# ===================================
# Development Settings
# ===================================
DEBUG_MODE=false
MOCK_DATA_ENABLED=false
LOG_LEVEL=info

# ===================================
# Security Configuration
# ===================================
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5

# ===================================
# Health Device Integration
# ===================================
HEALTH_DEVICE_API_KEY=your_health_device_api_key
ENABLE_BLUETOOTH_DEVICES=true
ENABLE_HEALTH_KIT=true

# ===================================
# Notification Configuration
# ===================================
FCM_SERVER_KEY=your_fcm_server_key
NOTIFICATION_TOPIC=diacare_notifications
